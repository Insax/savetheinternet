<!DOCTYPE html>
<html lang="{{ localeCodes[app.request.locale][0]|lower }}">
<head>
    <meta charset="UTF-8">
    <!--<meta name="robots" content="noindex, nofollow">-->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Save the Internet</title>
    <meta name="title" content="Save the Internet">
    <meta name="description" content="The Internet is in great danger. We are an organization who has the goal to inform and stop the EU from their biggest mistake. Help us defend the Internet!">

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('build/static/favicons/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('build/static/favicons/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('build/static/favicons/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('build/static/favicons/site.webmanifest') }}">
    <link rel="mask-icon" href="{{ asset('build/static/favicons/safari-pinned-tab.svg') }}" color="#12233f">
    <meta name="msapplication-TileColor" content="#12233f">
    <meta name="theme-color" content="#12233f">
    <!-- /Favicons -->

    <!-- Cards -->
    <meta itemprop="name" content="Save the Internet">
    <meta itemprop="description"
          content="The Internet is in danger. Learn more about how you can save it.">
    <meta itemprop="image" content="https://savetheinternet.info/build/static/android-chrome-512x512.png"/>

    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:title" content='Save the Internet'/>
    <meta name="twitter:description"
          content="The Internet is in danger. Learn more about how you can save it."/>
    <meta name="twitter:image" content="https://savetheinternet.info/build/static/android-chrome-512x512.png"/>

    <meta property="og:title"
          content="Save the Internet">
    <meta property="og:description"
          content="The Internet is in danger. Learn more about how you can save it.">
    <meta property="og:image" content="https://savetheinternet.info/build/static/android-chrome-512x512.png"/>
    <meta name="og:image:secure_url" content="https://savetheinternet.info/build/static/android-chrome-512x512.png"/>
    <meta property="og:site_name" content="Save the Internet"/>

    {% for locale in locales %}
        <link rel="alternate"
              href="{{ path(app.request.attributes.get('_route'),  app.request.attributes.get('_route_params')|merge({'_locale': locale})) }}"
              hreflang="{{ localeCodes[locale][0]|lower }}"/>
    {% endfor %}
    <link rel="canonical"
          href="{{ path(app.request.attributes.get('_route'),  app.request.attributes.get('_route_params')) }}">

    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    {% endblock %}
</head>
<body>
{% block body %}{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
{% endblock %}
</body>
</html>
